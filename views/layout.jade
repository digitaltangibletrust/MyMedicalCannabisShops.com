block vars

include mixins

doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='shortcut icon' href='/media/favicon.png?v=1')
    link(rel='stylesheet', href='/less/core.min.css?#{cacheBreaker}')
    style.
      div {
        border: 1px solid black;
      }
      .subscribe {
        border: 1px solid orange;
      }
      .offer {
        width: 150px;
        height: 250px;
      }
    block neck
  
  body
    div.navbar
      include head
    div.page.container
      block content
    div.footer
      include footer
    script(src='/vendor/jquery/jquery.min.js?#{cacheBreaker}')
    script(src='/js/thirdPartyAndBrowserify.min.js?#{cacheBreaker}')
    script(src='/js/mmcs.min.js?#{cacheBreaker}')

    block feet
