extends /views/layout

block content
  +subscribePrompt
  .section-padding
    .container
      .row
        .col-md-9.col-md-push-3
          .panel.panel-warning: .panel-body
            .row
              .col-md-9
                h2.no-margin.text-orange.text-center $#{total} in total offers!
              .col-md-3.text-right
                a.btn.btn-default.howitworks(href="#") How it works
          .row
            each offer in offerData.offers 
             +showOffer(offer.Partner, offer)

        .col-md-3.col-md-pull-9
          h3.no-margin-top Stores
          .row
            each partner in offerData.partners
              .col-lg-6
                +partnerBox(partner)
  +modalTemplate
  +howitworks
