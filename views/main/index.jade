extends /views/layout

block content
  +subscribePrompt

  .section-padding
    .container
      .row
        .col-md-3
          h3.no-margin-top Stores
          .row
            each partner in offerData.partners
              .col-xs-6
                a.text-center.partner-sidebar(href="/store/#{partner.slug}" title='#{partner.name}')
                  if (partner.logo)
                    img.img-responsive.center-block(src="#{partner.logo}" style="max-height:120px;")
                    | #{partner.name}
                  else
                    .ghost-center: p #{partner.name}

        .col-md-9
          h3.no-margin-top.hidden-md.hidden-lg Offers
          .row
            each offer in offerData.offers 
             +showOffer(offer)