extends /views/layout

block content
  +subscribePrompt

  .section-padding
    .container
      .row
        .col-md-3
          h3.no-margin-top Stores
          .row
            each merchant in offerData.merchants
              .col-sm-6
                a.thumbnail.text-center(href="/store/#{merchant.slug}" title='#{merchant.name}')
                  if (merchant.logo)
                    img(src="#{merchant.logo}")
                    | &nbsp; #{merchant.name}
                  else
                    | #{merchant.name} 

        .col-md-9
          .row
            each offer in offerData.offers 
             +showOffer(offer)