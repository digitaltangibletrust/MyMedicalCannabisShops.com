extends /views/layout

block head
  title For merchants

block content
  .dark.section-padding
    .container
      h1 Merchant Sign up
      p here should be awesome text
  .textured.section-padding
    .container
      form.form(method="post" action="/signup" enctype="multipart/form-data")
        .section-padding
          .row
            .col-sm-4
              .form-group
                label(for="name") Name
                input.form-control(type="text", required, name="name" id="name")
            .col-sm-4
              .form-group
                label(for="email") Email
                input.form-control(type="email", required, name="email" id="email")
          .row
            .col-sm-4
              .form-group
                label(for="phone") Phone
                input.form-control(type="phone", required, name="phone" id="phone")
          .row
            .col-sm-8
              .form-group
                label Type of transactions that will be conducted with Serica 
                  span.text-muted (select all that apply)
                .checkbox
                  label 
                    input(type="checkbox" name="accept_online_payments")
                    | Accept Online Payments
                .checkbox
                  label 
                    input(type="checkbox" name="btc_transfers")
                    | BTC Transfers
                .checkbox
                  label 
                    input(type="checkbox" name="other_transactions")
                    | Other
                
          .row.room-above
            .col-sm-4
              .form-group
                label(for="taxRevenue") Revenue declared on last Federal/State taxes (USD)
                input.form-control(type="number", step="any" name="taxRevenue" id="taxRevenue" value="")
            .col-sm-4
              .form-group
                label(for="monthlyVolume") Estimated monthly online sales volume (USD)
                input.form-control(type="number", step="any" name="monthlyVolume" id="monthlyVolume" value="" )
          .row
            .col-sm-4
              .form-group
                label(for="averageTransaction") Average online transaction amount (USD)
                input.form-control(type="number", step="any" name="averageTransaction" id="averageTransaction" value="" )
            .col-sm-4
              .form-group
                label(for="largestTransaction") Highest online transaction amount (USD)
                input.form-control(type="number", step="any" name="largestTransaction" id="largestTransaction" value="" )

          .row.room-above
            .col-sm-8
              .form-group
                label Which payment methods have you previously accepted or are currently accepting? 
                  span.text-muted (select all that apply)
                .checkbox
                  label 
                    input(type="checkbox" name="accept_cash")
                    | Cash
                .checkbox
                  label 
                    input(type="checkbox" name="accept_CC")
                    | Credit/debit cards
                .checkbox
                  label 
                    input(type="checkbox" name="accept_check")
                    | Check
                .checkbox
                  label 
                    input(type="checkbox" name="accept_Wire")
                    | Wire
          .row
            .col-sm-8
              .form-group.pull-left.margin-right
                label Have you received more than $10,000 USD cash as payment at once from an individual customer?
                .radio.no-margin
                  label Yes
                  input(type="radio" name="over10kCash" value="true")
                .radio
                  label No
                  input(type="radio" name="over10kCash" value="false")
            .col-sm-4
          .row.room-above
            .col-sm-4
              label Your logo
              input(type="file" name="logo" required)
            .col-sm-4
            .col-sm-4
          .row
            &nbsp;
          .row.room-above
            .col-sm-4
              button.btn.btn-lg.btn-block.btn-info.text-uppercase(type="submit") Submit

