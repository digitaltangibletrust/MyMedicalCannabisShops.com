mixin ShareThis
  +ShareThisButtons
  +ShareThisCode
  

mixin ShareThisButtons
  .sharethis.text-center
    span.st_facebook_hcount(displayText='Facebook' st_title="DispensaryOffers.com")
    span.st_twitter_hcount(displayText='Tweet' st_title="DispensaryOffers.com")
    span.st_reddit_hcount(displayText='Reddit' st_title="DispensaryOffers.com")
    span.st_googleplus_hcount(displayText='Google +' st_title="DispensaryOffers.com")


mixin ShareThisCode
  script(type="text/javascript").
    var switchTo5x=true;
  script(type="text/javascript" src="https://ws.sharethis.com/button/buttons.js")
  script(type="text/javascript").
    stLight.options({
      'publisher': 'fb9cc3dc-c614-4a67-b606-45cd6c85672e',
      'doNotHash': false,
      'doNotCopy': false,
      'hashAddressBar': false
    });
