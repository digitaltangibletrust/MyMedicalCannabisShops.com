mixin ShareThis
	+ShareThisButtons
	+ShareThisCode
	

mixin ShareThisButtons
	span.st_sharethis_large(displayText='ShareThis')
	span.st_facebook_large(displayText='Facebook')
	span.st_twitter_large(displayText='Tweet')
	span.st_googleplus_large(displayText='Google +')
	span.st_email_large(displayText='Email')

mixin ShareThisCode
	script(type="text/javascript").
		var switchTo5x=true;
	script(type="text/javascript" src="https://ws.sharethis.com/button/buttons.js")
	script(type="text/javascript").
		stLight.options({
		  'publisher': '3506c868-570b-4d0a-93bc-98a6b329e584',
		  'doNotHash': false,
		  'doNotCopy': false,
		  'hashAddressBar': false
		});
